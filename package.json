{
  "name": "MALWARE-ATLAS",
  "displayName": "ATLAS",
  "icon": "media/logo.png",
  "version": "1.0.0",
  "description": "VSCode extension to enhance ATLAS rule development.",
  "repository": {
		"type": "git",
		"url": "https://github.com/MALWARE-ATLAS/ATLAS-VSCode"
	},
  "bugs": {
		"url": "https://github.com/MALWARE-ATLAS/ATLAS-VSCode/issues"
	},
  "main": "./out/extension.js",
  "scripts": {
    "watch": "tsc -watch -p ./",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": ["atlas", "ATLAS", "MALWARE-ATLAS"],
  "author": "r00tten",
  "publisher": "r00tten",
  "license": "MIT",
  "devDependencies": {
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^18.7.14",
    "@types/vscode": "^1.71.0",
    "typescript": "^4.8.2"
  },
  "engines": {
    "vscode": "^1.71.0"
  },
  "activationEvents": [
    "workspaceContains:**/*.atl",
    "onCommand:ATLAS.syncScripts",
    "onCommand:ATLAS.createScripts"
  ],
  "categories": [
    "Snippets"
  ],
  "contributes": {
    "snippets": [
      {
        "language": "plaintext",
        "path": "./snippets.json"
      },
      {
        "language": "yaml",
        "path": "./snippets.json"
      }
    ],
    "commands": [
      {
        "command": "ATLAS.syncScripts",
        "category": "ATLAS",
        "title": "Sync the scripts section"
      },
      {
        "command": "ATLAS.createScripts",
        "category": "ATLAS",
        "title": "Create and fill the scripts section"
      }
    ]
  },
  "capabilities": {
    "completionProvider": {
      "resolveProvider": "true",
      "triggerCharacters": [
        ".",
        "$",
        ":"
      ]
    }
  },
  "dependencies": {
    "js-yaml": "^4.1.0"
  }
}
